.inner-wall
  background-position top center
  background-size cover
  display block
  height 41rem
  margin-bottom 6rem
  &__container
    align-items center
    color #fff
    display flex
    height 100%
    transform translateY(3rem)
  &__title
    color #fff
    max-width 75rem
    &--small
      font-size 4rem

.inner
  &__img
    margin-bottom 3.5rem
    img
      display block
      max-width 100%
      width 100%
      & + .inner__sign
        margin-top 2rem
  &__sign
    color $gray
    display block
    font-size 1.4rem
  &__header
    display flex
    justify-content space-between

.file
  align-items flex-start
  display flex
  margin-bottom 3.2rem
  &__icon
    margin-right 1.5rem
  &__text
    border-bottom 1px solid rgba($primary, .2)
    color $primary
    transition all .4s
  &__title
    margin-bottom .8rem
    line-height 1.4
    transition color .2s
  &__size
    color $gray
    font-size 1.2rem
  &:hover
    .file
      &__title
        color $primary
      &__text
        border-color rgba($primary, .7)

.person
  &__img
    margin-bottom 2.4rem
    img
      display block
      max-width 100%
  &__name
    font-size 1.6rem
    font-weight 500
    margin-bottom .6rem
    text-transform uppercase
  &__role
    color $gray
    font-size 1.4rem
    margin-bottom 1.4rem
  &__phone
    font-size 1.6rem
  &--offset-fix
    margin-top 7.5rem

.show-more
  color $main
  cursor pointer
  text-decoration none
  &__icon
    display inline-block
    margin-left .7rem
    margin-right 1.5rem
    position relative
    vertical-align middle
    transform translateY(-.5rem)
    .minus
      display none
    &:after
      content ''
      border 1px solid $main
      border-radius 50%
      circle(4rem)
      left -.7rem
      margin-right 1rem
      position absolute
      top -.2rem
      text-align center
    img
      transform translateY(.5rem)
  &__text
    display inline-block
    font-weight 600
    vertical-align middle
    text-transform uppercase
  &:hover
    text-decoration none

.infographic
  margin-bottom 2.4rem
  &__image
    display inline-block
    margin-right 2.4rem
    max-width 16.4rem


.sideblock
  position relative
  .read-next
    bottom 4rem
    position absolute
    .i
      margin-bottom 1rem

ul.inner-nav
  border $border
  margin-top 0
  padding-left 0
  li
    border-bottom $border
    margin 0
    padding 1.6rem
    &.active
      background-color $light-gray
      & > a
        font-weight 600
    ul
      margin-bottom 0
      padding-left 0
      li
        border 0
        padding .8rem
    a
      color $main
      cursor pointer
      &:hover
        color $primary
    &:after
      display none

.section-links
  border-bottom $border

.section-link
  border $border
  border-bottom 0
  display block
  padding 2.4rem 3.2rem
  position relative
  transition box-shadow .2s
  &__container
    max-width 80%
  &__header
    font-size 2.4rem
    font-weight 600
    margin-bottom 2.4rem
  &__anons
    line-height 1.6
  &__icon
    align-items center
    border 1px solid $primary
    border-radius 50%
    circle(4rem)
    display flex
    justify-content center
    position absolute
    right 3.2rem
    top 3.2rem
    svg
      circle(1.6rem)
      path
        fill $primary
  &:hover
    box-shadow $shadow
    .section-link
      &__icon
        background-color $primary
        svg
          path
            fill #fff

.document
  box-shadow 0px 0px 2rem .5rem rgba(170, 170, 170, 0.1)
  display inline-block
  margin-bottom 2.4rem
  margin-right 2.4rem
  height 48rem
  padding 1.6rem
  vertical-align top

.video
  img
    display block
    margin-bottom 1.6rem
    width 100%
  &__img
    display block
    position relative
    &:after
      background $primary url('../../img/play.png') 56% center no-repeat 
      border-radius 50%
      box-shadow 0 0 1.6rem .8rem rgba($primary, .3)
      bottom 0
      circle(6.4rem)
      content ''
      left 0
      margin auto
      position absolute
      right 0
      top 0

@media(max-width 992px)
  .section-link
    &__icon
      top 1.6rem
  .person
    &--offset-fix
      margin-top 4rem

@media(max-width 960px)
  .inner-wall
    background-position 70% top

@media(max-width 767px)
  .inner-wall
    height 20rem
    &__title
      font-size 4rem
  .sideblock
    .read-next
      position initial

@media(max-width 500px)
  .inner
    &__header
      flex-direction column
      margin-bottom 2rem
    .info
      &--big
        margin-bottom 4rem
  .info-image
    text-align left

@media(max-width 450px)
  .inner-wall
    &__title
      font-size 3.2rem

@media(max-width 380px)
  .inner-wall
    &__title
      font-size 2.4rem
