.news
  margin-bottom 3.2rem
  margin-top 3.2rem
  .new
    &__container
      min-height 15rem
    &__img
      background-position top center
      background-size cover
      background-repeat no-repeat
      min-height 24rem
      margin-bottom 1.6rem
    &__title
      font-size 2rem
      font-weight 500
      line-height 1.3
      margin-bottom 1.6rem
      text-transform uppercase
    &__anons
      font-size 1.4rem
      line-height 1.6
    &__date
      color $gray


@media(max-width 1200px)
  .hero
    &__content
      padding 0
    &__video
      background url('../../video/main.jpg')
      background-size cover
      height 100%
      opacity .4
      video
        display none
  .news
    .new
      &__container
        padding 2rem

@media(max-width 1000px)
  .hero
    height 40vh
    .logo
      &__text
        font-size 8rem
    &__subtitle
      padding-left 0
  .news
    flex-wrap wrap
    .new
      &:first-child
        margin-bottom 4rem
      &__container
        padding 5rem 3rem

@media(max-width 767px)
  .hero
    height 25rem
    .logo
      &__icon
        display none
      &__text
        font-size 6rem
        margin 0
        margin-bottom 2rem

@media(max-width 700px)
  .hero
    height 35rem
  .index
    &__section
      margin-bottom 8rem
    &__info-img
      // margin-top 4rem
      // transform none
      .info
        color $main
        left 2rem
      img
        display none
  .news
    .new
      flex-direction column-reverse
      order reverse
      max-width initial
      &__container
        width 100%
        &:after
          display none
      &__img
        width 100%

@media(max-width 550px)
  .index
    &__info-img
      display none

@media(max-width 350px)
  .hero
    .logo
      &__text
        font-size 3.2rem
    &__subtitle
      font-size 1.6rem
