.hero
  background-color $main
  height calc(100vh - 10rem)
  max-height 80rem
  margin-bottom 7rem
  overflow hidden
  position relative
  &__video
    opacity 0.5
    position absolute
    width 100%
    video
      max-width 100%
      width 100%
  &__container
    align-items center
    color #fff
    display flex
    height 100%
    justify-content center
    position relative
    width 100%
    z-index 50
  &__content
    padding 0 8rem
  .logo
    &__icon
      background-image url('../../img/logo-white-big.png')
      size(106px, 136px)
    &__text
      font-size 12.4rem
      margin-top 2rem
      margin-bottom 3.5rem
      // transform translateY(.9rem)
  &__subtitle
    font-size 1.8rem
    line-height 1.6
    padding-left (208 / 1146 * 100)%


.index
  &__section
    margin-bottom $main-offset
  .about
    font-size 2.2rem
    font-weight 300
  &__info-img
    position relative
    transform translateY(-2rem)
    img
      display block
      max-width 100%
    .info
      color #fff
      left 6rem
      position absolute
      top 2rem

.main-page-img
  transform translateX(-3rem)

.service
  align-items flex-end
  background-color $main
  background-position top center
  background-repeat no-repeat
  background-size cover
  display flex
  height 22rem
  margin-bottom 3rem
  transition background-size .3s
  &__container
    align-items center
    display flex
    justify-content space-between
    margin-left 2rem
    margin-bottom 1.5rem
    width 100%
  &__title
    color #fff
    display inline-block
    font-size 2rem
    font-weight 600
    line-height 1.2
    margin-right 1rem
    text-transform uppercase
    vertical-align middle
  &__btn
    background-color $primary
    circle(4rem)
    color #fff
    display block
    flex-shrink 0
    margin-right 2rem
    text-align center
    transition transform .3s ease
    .fa
      font-size 2.2rem
      font-weight 600
      margin-top .8rem
  &:hover
    // background-size 106%
    .service
      &__btn
        transform translateX(-2rem)


