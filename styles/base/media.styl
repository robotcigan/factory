@media (max-width: 767px)
  .row
    margin 0 -2%

@media(max-width 1200px)
  body
    &.body--cursor-pointer
      cursor pointer

.mobile-header
  background-color $primary
  display none
  height 9rem
  margin-bottom 0
  position relative
  padding 1rem 0
  transition transform .4s ease
  width 100%
  .logo
    background url('../../img/logo-white.png') no-repeat
    // background-size contain
    height 6rem
    width 11rem

.mobile-menu-toggle
  cursor pointer
  display none
  position absolute
  right 3rem
  top 4rem
  size(12px, 15px)
  transition transform .4s ease
  &:before
    // background-color rgba(#fff, .97)
    content ''
    left -3.5rem
    position absolute
    top -3rem
    circle(8rem)
  span
    // background-color $primary
    background-color #fff
    display block
    height 2px
    position absolute
    top 0
    transition all .3s
    width 3rem
    &:nth-child(2)
      top 8px
    &:nth-child(3)
      top 16px
  &--active
    span
      &:nth-child(1)
        transform rotate(45deg)
        top 5px
      &:nth-child(2)
        opacity 0
      &:nth-child(3)
        transform rotate(-45deg)
        top 5px

.mobile-menu
  background-color $primary
  color #fff
  display none
  border-top 1px solid rgba(#fff, .1)
  padding-bottom 4rem
  padding-top 4rem
  &__links
    display block
    margin-bottom 4rem
  &__link
    margin-bottom 2rem
    a
      border-bottom 1px solid rgba(#fff, .2)
      color #fff
      display inline-block
      font-size 1.8rem
      font-weight 600
      text-decoration none
  .btn
    margin-top 1rem
    margin-bottom 3rem


@media(max-width 1140px)
  .grid--container
    max-width 96%

@media(max-width 1024px)
  .main-header
    display none
  .mobile-header
    display block
  .mobile-menu-toggle
    display block
  .navigation
    display none
