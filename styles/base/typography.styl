//   line-height 1.4
//   margin-bottom 3.5rem

.h2
  font-size 4.8rem
  font-family $font-header
  font-weight 800
  line-height 1
  margin-bottom 2rem
  text-transform uppercase

.h3
  font-size 2.2rem
  font-weight 400
  line-height (36 / 22)
  margin-bottom 2rem

.h4
  display inline-block
  font-size 2rem
  font-weight 500
  line-height (30 / 20)
  margin-bottom 1.5rem
  margin-top 0

.index
  .p
    font-weight 400
    line-height 1.65
    margin-bottom 3rem
  .strong
    display inline-block
    font-size 1.6rem
    font-weight 400
    margin-bottom .5rem
  .i
    color $gray
    display inline-block
    font-family $font-header
    font-weight 400
    line-height 1.6
    margin-bottom 3.5rem
  ol,
  ul
    font-weight 300
    line-height $line-height
    padding-left 2rem
    li
      color $primary
      margin-bottom 2rem
      span,
      p,
      strong,
      i
        color $main
      span
        display block
        margin-bottom 2rem
    ul
      list-style-type disc
      ul
        list-style-type circle
  blockquote
    color $primary
    display block
    font-weight 300
    line-height $line-height
    margin-bottom 4rem
    margin-left 0
    padding-left 3.5rem
    position relative
    &:before
      background-color $primary
      content ''
      height 100%
      left 0
      position absolute
      top 0
      width 2px

.ul-offset
  padding-left 6rem !important


.text-primary
  color $primary


.uppercase
  text-transform uppercase



